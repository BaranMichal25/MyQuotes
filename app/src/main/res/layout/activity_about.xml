<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="io.blacklagoonapps.myquotes.AboutActivity">

    <TextView
        android:id="@+id/textview_about_production"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/production"
        android:textAppearance="@android:style/TextAppearance.Medium"/>

    <TextView
        android:id="@+id/textview_about_developers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_about_production"
        android:paddingTop="5dp"
        android:text="@string/developers"/>

    <TextView
        android:id="@+id/textview_about_developers_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_about_developers"
        android:text="@string/app_authors"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textview_about_logo_designer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_about_developers_names"
        android:paddingTop="10dp"
        android:text="@string/logo_designer"/>

    <TextView
        android:id="@+id/textview_about_logo_designer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_about_logo_designer"
        android:text="@string/logo_designer_name"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textview_about_application"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_about_logo_designer_name"
        android:paddingTop="20dp"
        android:text="@string/application"
        android:textAppearance="@android:style/TextAppearance.Medium"/>

    <TextView
        android:id="@+id/textview_about_source_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_about_application"
        android:paddingTop="10dp"
        android:text="@string/source_code"/>

    <TextView
        android:id="@+id/textview_about_source_code_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_about_source_code"
        android:autoLink="web"
        android:text="@string/source_code_url"/>

    <TextView
        android:id="@+id/textview_about_licenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_about_source_code_url"
        android:onClick="onOpenSourceLicensesClick"
        android:paddingTop="5dp"
        android:text="@string/licenses_title"
        android:textColor="?android:attr/textColorLink"/>

    <TextView
        android:id="@+id/textview_about_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_about_licenses"
        android:paddingTop="5dp"
        android:text="@string/version"/>

    <TextView
        android:id="@+id/textview_about_version_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_about_version"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/button_about_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onRateUsClick"
        android:text="@string/rate_us"
        android:theme="@style/CustomButton"/>

</RelativeLayout>