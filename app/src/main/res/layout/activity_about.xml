<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.quotes.AboutActivity">

    <TextView
        android:id="@+id/production"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:text="@string/production"/>

    <TextView
        android:id="@+id/developers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/production"
        android:paddingTop="5dp"
        android:text="@string/developers"/>

    <TextView
        android:id="@+id/authors_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/developers"
        android:textStyle="bold"
        android:text="@string/authors_names"/>

    <TextView
        android:id="@+id/logo_designer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/authors_names"
        android:paddingTop="10dp"
        android:text="@string/logo_designer"/>

    <TextView
        android:id="@+id/logo_designer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_designer"
        android:textStyle="bold"
        android:text="@string/logo_designer_name"/>

    <TextView
        android:id="@+id/application"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_designer_name"
        android:paddingTop="20dp"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:text="@string/application"/>

    <TextView
        android:id="@+id/source_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/application"
        android:paddingTop="10dp"
        android:text="@string/source_code"/>

    <TextView
        android:id="@+id/source_code_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/source_code"
        android:autoLink="web"
        android:text="@string/source_code_url"/>

    <TextView
        android:id="@+id/open_source_licenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/source_code_url"
        android:paddingTop="5dp"
        android:textColor="?android:attr/textColorLink"
        android:onClick="onOpenSourceLicensesClick"
        android:text="@string/title_activity_licenses"/>

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/open_source_licenses"
        android:paddingTop="5dp"
        android:text="@string/version"/>

    <TextView
        android:id="@+id/version_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/version"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/rate_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:onClick="onRateUsClick"
        android:theme="@style/CustomButton"
        android:text="@string/rate_us"/>

</RelativeLayout>